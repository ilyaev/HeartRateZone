<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="-"
        android:id="@+id/labelValue"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="150dp"
        android:shadowColor="#7eff38" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switchConnection"
        android:checked="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:switchMinWidth="200dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Disconnected"
        android:id="@+id/labelStatus"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use saved HRM device"
        android:id="@+id/cbSavedDevice"
        android:checked="true"
        android:layout_above="@+id/switchConnection"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:textSize="18dp" />

    <com.pbartz.heartmonitor.view.Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vwButton"
        android:layout_toStartOf="@+id/labelValue"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
