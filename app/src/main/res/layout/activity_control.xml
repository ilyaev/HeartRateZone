<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.pbartz.heartmonitor.ControlActivity">

    <com.pbartz.heartmonitor.view.Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewChart"
        android:layout_weight="1"
        android:layout_below="@+id/viewProgress"
        android:layout_marginBottom="45dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/mainPanels">

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_weight="1"
            android:id="@+id/spacerMain" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.04"
            android:id="@+id/bottomButtons">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:src="@drawable/settings_white"
                android:id="@+id/btnSettings"
                android:scaleType="fitCenter"
                android:background="#ff6951"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Start"
                android:id="@+id/btnPlay"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#ff6951"
                android:src="@drawable/play_white"
                android:scaleType="fitCenter"
                android:layout_margin="5dp" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:background="#ff6951"
                android:src="@drawable/audio_on_white"
                android:id="@+id/btnAudio"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

    <com.pbartz.heartmonitor.view.Button
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:id="@+id/viewProgress"
        android:layout_gravity="center_horizontal"/>

    <com.pbartz.heartmonitor.view.Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewGauge"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_alignParentStart="false" />

</RelativeLayout>
